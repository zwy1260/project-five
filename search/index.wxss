/* 搜索样式 */
.title{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
 }
 
 
 .search_con{
  width: 80%;
  margin:20px auto;
 }
 
 .search_con .search_input{
  border: 1px solid rgb(214, 211, 211);
  height: 45px;
  border-radius: 100px;
  font-size: 17px;
  padding-left: 15px;/*此处要用padding-left才可以把光标往右移动15像素，不可以用text-indent*/
  color: #333;
 }
 
 .search_con .search_btn{
  margin-top: 15px;
  width: 100%;
  height: 45px;
  background: #56b273;
  color: #fff;
  border-radius: 100px;
 }
 
 .index_floor .floor_group .floor_title {
  font-size: 20px;
  font-weight: 600;
  color: var(--themeColor);
  text-align: center;
  padding: 10px 0;
  border-bottom: 1px solid #ccc;
}
 .wrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.wrap .product{
  width: 46%;
  background: #f9f9f9;
  border-radius: 16rpx;
  margin: 6rpx 10rpx;
}
.product .grid-img{
  width: 250rpx;
  height: 250rpx;
  margin: 50rpx auto 0;
  overflow: hidden;
}
.product .grid-img image{
  width: 250rpx;
}
.product .user-img{
  width: 300rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  /* 边框 */
  border-radius: 25rpx;
  border: 1rpx solid #ccc;
  display: flex;
}
.product .user-img image{
  width: 50rpx;
}
.product .user-img .user-name{
  font-size: 30rpx;
  color: #333;
  margin-left: 10rpx;
  margin-top: 5rpx;
}
.product .info{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  line-height: 2;
  text-align: center;
}
.info .name{
  color: #3a3a3a;
  font-size: 28rpx;
}
.info .price{
  color: #d0021b;
  font-size: 26rpx;
}

.back-top{
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, .3);
  line-height: 80rpx;
  text-align: center;
  font-weight: bold;
  color: #576b95;
}

.fixed{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}